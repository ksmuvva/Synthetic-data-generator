# Synthetic Data Generator - Environment Variables
# Copy this file to .env and fill in your API keys

# ============================================
# LLM API Keys
# ============================================

# OpenAI API Key
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ============================================
# Cloud Storage Credentials
# ============================================

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-east-1

# Google Cloud Storage
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/gcs-credentials.json

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-azure-connection-string
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key

# ============================================
# Application Settings
# ============================================

# LLM Provider (openai, anthropic, local)
SYNTH_AGENT_LLM_PROVIDER=openai

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
SYNTH_AGENT_LOG_LEVEL=INFO

# Output Directory
SYNTH_AGENT_OUTPUT_DIR=./output

# Session Directory
SYNTH_AGENT_SESSION_DIR=~/.synth-agent

# Privacy Mode (true/false)
SYNTH_AGENT_LOCAL_ONLY_MODE=false
SYNTH_AGENT_SEND_PATTERN_TO_LLM=false

# ============================================
# Advanced Settings
# ============================================

# Max retries for API calls
SYNTH_AGENT_MAX_RETRIES=4

# Request timeout (seconds)
SYNTH_AGENT_TIMEOUT=30

# Enable caching
SYNTH_AGENT_ENABLE_CACHE=true

# Default number of rows to generate
SYNTH_AGENT_DEFAULT_ROWS=1000

# Enable verbose mode
SYNTH_AGENT_VERBOSE=false
